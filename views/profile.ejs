<%- include('parts/header') %> 
<% var income = income || []%>
<% var expense = expense || []%>
<% var x %>
<% var y %>



<section>

<div class="container bg-dark">
    <h1 class="text-center mt-4 text-white ">Hello Moto </h1>

    <div class="row budget_numbers d-flex justify-content-around  mt-4">
    <div class="col-3 number bg-primary rounded " id="earned">
        <h2 class="text-center mt-4 text-white ">Income</h2>
        <div class="amount_Income d-flex flex.-column justify-content-center ">
            <p id="currency ">$</p>
            <span id="amount_earned  text-white"><%=x%></span>
        </div>
    </div>
    <div class="col-3 number bg-primary rounded ">
        <h2 class="text-center mt-4 text-white" >Balance</h2>
        <div class="amount_balance d-flex flex.-column justify-content-center  ">
            <p id="currency ">$</p>
            <span id="amount_available text-white "><%=x-y%></span>
        </div>
    </div>
    <div class="col-3  number bg-primary rounded ">
        <h2 class="text-center mt-4 text-white">Expense</h2>
        <div class="amount_expense d-flex flex.-column justify-content-center ">
            <p id="currency ">$</p>
            <span id="amount_Expense text-white "><%=y%></span>
        </div>
    </div>
    </div>

    <div class="row mt-4 d-flex ">
       <form action="" method="POST" class="form d-flex justify-content-between mb-4  ">
        <input type="text" class="form-control w-25" id="input_description" name="income_description" placeholder="Description ">
        <input type="number" class="form-control w-50" id="input_amount" name="income_amount" placeholder="Amount">
        <button type="submit" class="btn btn-success me-md-2 w-25">Add Income</button>
        
      </form>



   
      <form  method="POST" action="/expense" class="form d-flex justify-content-between  mb-4 ">
       <input type="text" class="form-control w-25" id="input_description" name="expense_description" placeholder="Description ">
       <input type="number" class="form-control w-50" id="input_amount" name="expense_amount" placeholder="Amount">
      
       <button type="submit" class="btn btn-danger me-md-2  w-25">Add Expense</button>
     </form>
  
    
    </div>

    <div class="row d-flex .flex-row mt-4">
     <div class="col-6">
        <h3 class="text-center text-white ">Income</h3>
        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Time</th>
              </tr>
            </thead>
            <tbody>
              <% income.forEach(function(e){%>
              <tr>
              
                    <td><%=e._id%></td>
                    <td><%= e.income_description%></td>
                    <td><%= "$" %><%= e.income_amount%></td>
                    <td><%= e.time%></td>
                  </tr>
                  
              </tr>
              <%})%>
              
            </tbody>
          </table>
     </div>



     <div class="col-6">
        <h3 class="text-center text-white">Expense</h3>
        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Time</th>
              </tr>
            </thead>
            <tbody>
              <%expense.forEach(function(e){%>
              <tr>
                
                    <td><%=e._id%></td>
                    <td><%= e.expense_description%></td>
                    <td><%= "$" %><%= e.expense_amount%></td>
                    <td><%= e.time%></td>
                  </tr>
                 
              </tr>
              <%})%>
             
            </tbody>
          </table>
     </div>



    </div>


</div>
